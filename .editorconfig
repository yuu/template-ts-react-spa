[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 8

[Makefile]
indent_style = tab
indent_size = 8
tab_width = 8

[*.md]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

[*.{yml,yaml,json}]
indent_size = 2

[*.puml]
tab_width = 2

[*.{js,jsx,ts,tsx}]
indent_size = 4
