{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "newLine": "LF",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@project/*": ["./*"],
      "@root/*": ["src/*"],
    },
  },
  "include": [ "src/**/*" ],
  "exclude": [
    "node_modules"
  ]
}
